<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
<!--          <corners android:radius="3dip" /> -->
         <stroke android:width="1dip" android:color="#054cad" />
         <gradient android:angle="-90" android:startColor="#054cad" android:endColor="#054cad"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
<!--          <corners android:radius="3dip" /> -->
         <stroke android:width="1dip" android:color="#054cad" />
         <solid android:color="#054cad"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
<!--          <corners android:radius="3dip" /> -->
         <stroke android:width="1dip" android:color="#3683ed" />
         <gradient android:angle="-90" android:startColor="#327ee5" android:endColor="#3683ed" />            
     </shape>
 </item>
</selector>